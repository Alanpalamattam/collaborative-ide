{
	"compilerOptions": {
	  "target": "es2020",
	  "module": "commonjs",
	  "esModuleInterop": true,
	  "moduleResolution": "node",
	  "outDir": "./dist",
	  "rootDir": "./src",
	  "strict": true,
	  "baseUrl": ".",
	  "paths": {
		"*": ["node_modules/*", "src/types/*"]
	  },
	  "typeRoots": ["./node_modules/@types", "./src/types"],
	  "resolveJsonModule": true,
	  "allowSyntheticDefaultImports": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
  }